{
    "name": "korko/secretsanta",
    "description": "An organsation tool for secret santa parties.",
    "keywords": ["secretsanta", "tool"],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": "^7.1",
        "ext-openssl": "^7.1",
        "korko/callr": "^1.0",
        "anhskohbo/no-captcha": "^3.0",
        "league/statsd": "1.4.*",
        "korko/validator": "dev-master",
        "laravel/framework": "5.4.*",
        "mariuzzo/laravel-js-localization": "^1.4",
        "spatie/laravel-blade-javascript": "^1.0"
    },
    "require-dev": {
        "fzaninotto/faker": "~1.4",
        "laravel/tinker": "~1.0",
        "mockery/mockery": "0.9.*",
        "jakub-onderka/php-parallel-lint": "^1.0",
        "phpro/grumphp": "^0.14.1",
        "phpunit/phpunit": "~5.0",
        "povils/phpmnd": "^2.0",
        "rap2hpoutre/laravel-log-viewer": "^0.8.0",
        "squizlabs/php_codesniffer": "^3.2",
        "symfony/css-selector": "3.2.*",
        "symfony/dom-crawler": "3.2.*"
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "psr-4": {
            "Korko\\SecretSanta\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ],
        "post-install-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postInstall",
            "php artisan optimize"
        ],
        "post-update-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postUpdate",
            "php artisan optimize"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    }
}
